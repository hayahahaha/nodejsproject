                <!-- product Content -->
                <% for (var i = 0; i < products.length; i++) {%>
                <tr>
                  <td class="col-sm-9 col-md-6">
                    <div class="media">
                      <a class="thumbnail pull-left" href="#">
                        <img
                          class="media-object"
                          src="/<%= products[i].item.hinh  %>"
                          style="width: 180px; height: 80px;"
                        />
                      </a>
                      &emsp;
                      <div class="media-body">
                        <h4 class="media-heading">
                          <a
                            href="/product/<%= products[i].item.gioitinh%>/<%= products[i].item._id  %>"
                            ><%= products[i].item.tensanpham %></a
                          >
                        </h4>
                        <h5 class="media-heading">
                          <a href="#"
                            >Mã sản phẩm - <%= products[i].item.masanpham %></a
                          >
                        </h5>
                        <span>Status: </span
                        ><span class="text-success"
                          ><strong>In Stock</strong></span
                        >
                      </div>
                    </div>
                  </td>
                  <td class="col-sm-1 col-md-1" style="text-align: center">
                    <b> 2 </b>
                  </td>
                  <td class="col-sm-1 col-md-1 text-center">
                    <strong><%= products[i].item.dongia  %>₫</strong>
                  </td>
                  <td class="col-sm-1 col-md-1 text-center">
                    <strong><%= products[i].price  %>₫</strong>
                  </td>
                </tr>
